@model IEnumerable<CondominioFacilDDD.MVC.ViewModels.RuaViewModel>

<ul class="breadcrumb">
    VOCÊ ESTA EM:
    <li>
        @Html.ActionLink("Home", "Index", "Home")
    </li>
    <li>
        @Html.ActionLink("Ruas", "Index", "Ruas")
    </li>
    <li class="active">
        Buscar por Nome
    </li>
</ul>

@{
    ViewBag.Title = "Buscar por Nome";
}

<blockquote><h2>Busca de ruas</h2></blockquote>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Atualizar", "Edit", new { id=item.RuaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.RuaId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.RuaId })
        </td>
    </tr>
}

</table>
