<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Condomínio Fácil</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
             
               
            </div>
        </div>
    
        <!-- Navbar================================================== -->
        
            <div class="row">
                <div class="col-lg-12">
                    

                    <div class="container">
                        <div class="page-header">
                            <img src="~/Content/images/LogoTop.png" />
                        </div>
                        <div class="navbar navbar-default">
                            <div class="container">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <div class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav">
                                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                        <li>@Html.ActionLink("Condomínio", "Index", "Condominios") </li>
                                        <li>@Html.ActionLink("Propietários", "Index", "Propietarios") </li>
                                        <li>@Html.ActionLink("Residência", "Index", "Residencias") </li>
                                        <li>@Html.ActionLink("Sobre Nós", "About", "Home")</li>
                                        <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
  </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p><img src="~/Content/images/Logo.png"></img>  &copy; @DateTime.Now.Year </p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
