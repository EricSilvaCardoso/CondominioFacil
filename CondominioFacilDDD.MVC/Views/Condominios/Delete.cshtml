@model CondominioFacilDDD.MVC.ViewModels.CondominioViewModel

<ul class="breadcrumb">
    VOCÊ ESTA EM:
    <li>
        @Html.ActionLink("Home", "Index", "Home")
    </li>
    <li>
        @Html.ActionLink("Condominio", "Index", "Condominios")
    </li>
    <li class="active">
        Cadastro
    </li>
</ul>
@{
    ViewBag.Title = "Excluir Condominios";
}
<blockquote><h2>Exclusão de Condominios</h2></blockquote>
<h3>Tem certeza de que deseja excluir este condominio?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PropietarioId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Propietario.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResidenciaId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResidenciaId)
        </dd>

        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para condominios", "Index")
        </div>
    }
</div>
