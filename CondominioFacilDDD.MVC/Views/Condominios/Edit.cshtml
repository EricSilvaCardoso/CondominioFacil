@model CondominioFacilDDD.MVC.ViewModels.CondominioViewModel

<ul class="breadcrumb">
    VOCÊ ESTA EM:
    <li>
        @Html.ActionLink("Home", "Index", "Home")
    </li>
    <li>
        @Html.ActionLink("Condominio", "Index", "Condominios")
    </li>
    <li class="active">
        Atualizar
    </li>
</ul>
@{
    ViewBag.Title = "Atualizar Condomínio";
}
<blockquote><h2>Atualizar Condomínio</h2></blockquote>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CondominioId)

        <div class="form-group">
            @Html.LabelFor(model => model.ResidenciaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ResidenciaId", String.Empty)
                @Html.ValidationMessageFor(model => model.ResidenciaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PropietarioId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PropietarioId", String.Empty)
                @Html.ValidationMessageFor(model => model.PropietarioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Condominios", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
