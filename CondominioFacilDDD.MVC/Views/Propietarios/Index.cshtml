@using System.Web.UI.WebControls
@model CondominioFacilDDD.MVC.ViewModels.PropietarioViewModel

<ul class="breadcrumb">
    VOCÊ ESTA EM: 
    <li>
        @Html.ActionLink("Home", "Index", "Home")
    </li>
    <li class="active">
        Propietários
    </li>
</ul>
@{
    ViewBag.Title = "Index";
}

<blockquote><h2>Propietários</h2></blockquote>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Cadastro</h2>
            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Create", "Propietarios")'">Novo propietário</button>
        </div>
        <div class="col-md-4">
            <h2>Listar Propietários</h2>
           
            @using (Html.BeginForm("ListarPropietarios", "Propietarios"))
            {
                <p><button type=submit class="btn btn-default">Listar todos propietários</button></p>
            }
            
            @using (Html.BeginForm("Especiais", "Propietarios"))
            {
                <hr />
                <p><button type=submit class="btn btn-default">Listar propietários especiais</button></p>
            }
        </div>

        <div class="col-md-4">
            <h2>Buscar propietários</h2>
            
                @using (Html.BeginForm("BuscarNome", "Propietarios"))
                {
                    @Html.TextBoxFor(model => model.Nome, new {PlaceHolder="Digite um nome" })
                   
                    <hr/>
                    <p><button type="submit" class="btn btn-default">Buscar</button></p>
                }
            
                
            
                


    </div>
    </div>
</div>


