@model IEnumerable<CondominioFacilDDD.MVC.ViewModels.PropietarioViewModel>
<ul class="breadcrumb">
    VOCÊ ESTA EM:
    <li>
        @Html.ActionLink("Home", "Index", "Home")
    </li>
    <li>
        @Html.ActionLink("Propietários", "Index", "Propietarios")
    </li>
    <li class="active">
        Buscar por Nome
    </li>
</ul>

@{
    ViewBag.Title = "Buscar por Nome";
}


<blockquote><h2>Busca de propietários</h2></blockquote>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SobreNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SobreNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PropietarioId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PropietarioId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PropietarioId })
            </td>
        </tr>
    }

</table>
