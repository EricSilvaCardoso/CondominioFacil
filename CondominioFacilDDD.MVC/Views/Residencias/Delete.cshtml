@model CondominioFacilDDD.MVC.ViewModels.ResidenciaViewModel

<ul class="breadcrumb">
    <span>VOCÊ ESTA EM:</span>
    <li>
        @Html.ActionLink("Home", "Index", "Home")
    </li>
    <li>
        @Html.ActionLink("Residência", "Index", "Residencias")
    </li>
    <li class="active">
        Excluir
    </li>
</ul>
@{
    ViewBag.Title = "Excluir Residência";
}
<blockquote><h2>Excluir Residência</h2></blockquote>


<h3>Tem certeza de que deseja excluir esta residência</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("Nome de Rua")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rua.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NResidencia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NResidencia)
        </dd>

        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Voltar para residências", "Index")
            <input type="submit" value="Excluir" class="btn btn-default" /> 
            
        </div>
    }
</div>
